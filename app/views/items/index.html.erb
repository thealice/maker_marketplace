<div class="container">
    <h1>Browse all items</h1>
    <!-- Search box -->
    <div class="search row">
        <%= form_tag items_path, method: :get do %>
        <p>
            <%= label_tag "Search for an item: " %>
            <%= text_field_tag :query, params[:query] %>
            <%= submit_tag "Go", name: nil %>
        </p>
        <% end %>
    </div><!--END Search -->

    <!-- Items listing -->
    <%= render 'listings', items: @items, shop: @shop %>
</div>